<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:WpfKuGou_Beta="clr-namespace:WpfKuGou_Beta" xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero" xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions">
	<!-- 应该在此定义资源字典条目。-->
	<Style x:Key="ImageRadioButtonStyle" TargetType="{x:Type WpfKuGou_Beta:ImageRadioButtonButton}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type WpfKuGou_Beta:ImageRadioButtonButton}">
					<Grid>
						<Image HorizontalAlignment="Left" x:Name="Nor" VerticalAlignment="Top" Source="{TemplateBinding NorImage}" Stretch="Fill"/>
						<Image HorizontalAlignment="Left" x:Name="Hor" VerticalAlignment="Top" Source="{TemplateBinding HorImage}" Opacity="0" Stretch="Fill"/>
						<Image HorizontalAlignment="Left" x:Name="Selected" VerticalAlignment="Top" Source="{TemplateBinding SelectedImage}" Opacity="0" Stretch="Fill"/>
					</Grid>
					<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="Nor" Property="Opacity" Value="0" />
								<Setter TargetName="Hor" Property="Opacity" Value="100" />
								<Setter TargetName="Selected" Property="Opacity" Value="0" />
							</Trigger>
							<Trigger Property="IsChecked" Value="True">
								<Setter TargetName="Nor" Property="Opacity" Value="0" />
								<Setter TargetName="Hor" Property="Opacity" Value="0" />
								<Setter TargetName="Selected" Property="Opacity" Value="100" />
							</Trigger>
						<Trigger Property="IsEnabled" Value="False">
							<Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	<Style x:Key="ListBoxItemMusicStyle" TargetType="{x:Type ListBoxItem}">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
		<Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
