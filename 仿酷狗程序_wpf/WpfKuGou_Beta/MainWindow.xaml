				<local:ImageButton x:Name="MinBtn" Height="19" Width="21" Margin="5,0,0,0" Style="{DynamicResource ImageButtonStyle}" NorImage="skin/min_normal.bmp" HorImage="skin/min_hot.bmp" DownImage="skin/min_down.bmp" ToolTip="最小化" Click="MinBtn_Click"/>
