                <TextBox  Name="SearchContent" Width="310" Height="27"  Padding="0,4,35,0" BorderBrush="#5FCBCBCB" Style="{DynamicResource TextBoxStyle}" />
				<local:ImageButton x:Name="SerchBtn" Height="27" Width="33" Margin="-33,0,0,0" Style="{DynamicResource ImageButtonStyle}" NorImage="skin/Search_normal.png" HorImage="skin/Search_hot.png" DownImage="skin/Search_normal.png" Click="BtnSearchMusic"/>
				<local:ImageButton x:Name="GameBtn" Height="18" Width="52" Margin="10,0,0,0" Style="{DynamicResource ImageButtonStyle}" NorImage="skin/play_game_normal.png" HorImage="skin/play_game_hot.png" DownImage="skin/play_game_down.png" ToolTip="酷狗网络游戏平台"/>
