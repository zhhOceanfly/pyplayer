<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfKuGou_Beta" xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero" x:Class="WpfKuGou_Beta.MainWindow"
        Title="酷库音乐" Height="711" Width="1000" Icon="kukou.ico"  WindowStartupLocation="CenterScreen"  WindowStyle="None" MouseLeftButtonDown="OnDrag" ResizeMode="NoResize"  >

    <Window.Resources>
        <Style TargetType="{x:Type Menu}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Menu}">
                        <Border CornerRadius="0">
                            <ItemsPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MenuItemstyle" TargetType="{x:Type MenuItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type MenuItem}">
                        <Border Margin="0,2" x:Name="bd"   CornerRadius="0" >
                            <Border.Background>
                                <ImageBrush ImageSource="skin/menu_normal.png" />
                            </Border.Background>
                            <Grid>
                                <ContentPresenter Margin="0,10" ContentSource="Header" Grid.Column="1" HorizontalAlignment="Left"/>
                                <Popup x:Name="pop" Margin="10" IsOpen="{TemplateBinding IsSubmenuOpen}" AllowsTransparency="True" Placement="Bottom">
                                    <Border Margin="5" CornerRadius="4" Background="#FFF0F0F0" BorderThickness="1" BorderBrush="#FF32ECA8">
                                        <StackPanel IsItemsHost="True">
                                        </StackPanel>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="bd" Property="Background" >
                                    <Setter.Value>
                                        <ImageBrush ImageSource="skin/menu_hot.png" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="skin/menu_hot.png" />
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="pop" Property="IsOpen" Value="true"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Storyboard x:Key="Storyboard1" RepeatBehavior="Forever" AutoReverse="False">
        	<ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="textBlock">
        		<EasingThicknessKeyFrame KeyTime="0" Value="0"/>
        		<EasingThicknessKeyFrame KeyTime="0:0:2" Value="0,-20,0,0"/>
        	</ThicknessAnimationUsingKeyFrames>
        </Storyboard>

    </Window.Resources>
	<!--<Window.Triggers>
		<EventTrigger RoutedEvent="FrameworkElement.Loaded">
			<BeginStoryboard x:Name="Storyboard1_BeginStoryboard" Storyboard="{StaticResource Storyboard1}"/>
		</EventTrigger>
	</Window.Triggers>-->

	<Grid Name="Root" >
		<Grid.RowDefinitions>
			<RowDefinition Height="110"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="30"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="46"/>
			<ColumnDefinition Width="292"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.Background>
			<ImageBrush ImageSource="BackGround\back.png" />
		</Grid.Background>
		<Grid Grid.Row="0" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="2">
			<TextBlock		   HorizontalAlignment="Left" Margin="16,6,0,0" x:Name="textBlock1" VerticalAlignment="Top" Width="65" Height="23" Text="酷库音乐" FontSize="15" Foreground="White" />
			<local:ImageButton HorizontalAlignment="Left" Margin="12,68,0,0" VerticalAlignment="Top" Width="29" Height="26" NorImage="skin/Lyric_normal.png" HorImage="skin/Lyric_hot.png" DownImage="skin/Lyric_down.png" Style="{DynamicResource ImageButtonStyle}" />
			<local:ImageButton x:Name="BtnPre" HorizontalAlignment="Left" Margin="88,51,0,0" VerticalAlignment="Top" Width="49" Height="49" NorImage="skin/pre_normal.png" HorImage="skin/pre_hot.png" DownImage="skin/pre_down.png" Style="{DynamicResource ImageButtonStyle}"/>
			<local:ImageButton x:Name="BtnPlay" HorizontalAlignment="Left" Margin="149,51,0,0" VerticalAlignment="Top" Width="49" Height="49" NorImage="skin/play_normal.png" HorImage="skin/play_hot.png" DownImage="skin/play_down.png" Style="{DynamicResource ImageButtonStyle}" Click="OnBtnPlay" />
            <local:ImageButton x:Name="BtnPause" HorizontalAlignment="Left" Margin="149,51,0,0" VerticalAlignment="Top" Width="49" Height="49" NorImage="skin/pause_normal.png" HorImage="skin/pause_hot.png" DownImage="skin/play_down.png" Style="{DynamicResource ImageButtonStyle}" Visibility="Hidden" Click="OnBtnPause" />
			<local:ImageButton x:Name="BtnNext" HorizontalAlignment="Left" Height="49" Margin="210,51,0,0" VerticalAlignment="Top" Width="49" NorImage="skin/next_normal.png" HorImage="skin/next_hot.png" DownImage="skin/next_down.png" Style="{DynamicResource ImageButtonStyle}"/>
