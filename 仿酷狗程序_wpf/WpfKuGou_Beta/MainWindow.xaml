			</StackPanel>
			<StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal">
				 <local:ImageButton  Height="50" Width="34" Margin="35,0,0,0" Style="{DynamicResource ImageButtonStyle}" NorImage="skin/00123[34x50x8BPP].png" HorImage="skin/00120[34x50x8BPP].png" DownImage="skin/00122[34x50x8BPP].png" ToolTip="返回"/>
				 <local:ImageButton  Height="50" Width="34" Margin="15,0,0,0" Style="{DynamicResource ImageButtonStyle}" NorImage="skin/00127[34x50x8BPP].png" HorImage="skin/00125[34x50x8BPP].png" DownImage="skin/00126[34x50x8BPP].png" ToolTip="刷新"/>
				 <local:ImageRadioButtonButton x:Name="yueku" Height="50" Width="80" Margin="10,0,0,0" Style="{DynamicResource ImageRadioButtonStyle}" NorImage="skin/00977[80x50x8BPP].png" HorImage="skin/00978[80x50x8BPP].png" SelectedImage="skin/00979[80x50x8BPP].png" GroupName="Styles" ToolTip="最新最火歌曲尽在其中" Checked="web_Checked"  IsChecked="True"/>
                <local:ImageRadioButtonButton x:Name="fm" Height="50" Width="80" Margin="10,0,0,0" Style="{DynamicResource ImageRadioButtonStyle}" NorImage="skin/01081[80x50x8BPP].png" HorImage="skin/01082[80x50x8BPP].png" SelectedImage="skin/01083[80x50x8BPP].png" GroupName="Styles" ToolTip="享受随便听听的精彩" Checked="web_Checked"/>
                <local:ImageRadioButtonButton x:Name="mv" Height="50" Width="80" Margin="10,0,0,0" Style="{DynamicResource ImageRadioButtonStyle}" NorImage="skin/00711[80x50x8BPP].png" HorImage="skin/00712[80x50x8BPP].png" SelectedImage="skin/00713[80x50x8BPP].png" GroupName="Styles" ToolTip="随意点播百万高清MV" Checked="web_Checked"/>
                <local:ImageRadioButtonButton x:Name="show" Height="50" Width="80" Margin="10,0,0,0" Style="{DynamicResource ImageRadioButtonStyle}" NorImage="skin/00386[80x50x8BPP].png" HorImage="skin/00387[80x50x8BPP].png" SelectedImage="skin/00388[80x50x8BPP].png" GroupName="Styles" ToolTip="在线直播" Checked="web_Checked"/>
                <local:ImageRadioButtonButton x:Name="jiemu" Height="50" Width="80" Margin="10,0,0,0" Style="{DynamicResource ImageRadioButtonStyle}" NorImage="skin/01845[80x50x8BPP].png" HorImage="skin/01846[80x50x8BPP].png" SelectedImage="skin/01847[80x50x8BPP].png" GroupName="Styles" ToolTip="精彩节目,听我想听" Checked="web_Checked"/>
                <local:ImageRadioButtonButton x:Name="lrc" Height="50" Width="80" Margin="10,0,0,0" Style="{DynamicResource ImageRadioButtonStyle}" NorImage="skin/00165[80x50x8BPP].png" HorImage="skin/00166[80x50x8BPP].png" SelectedImage="skin/00167[80x50x8BPP].png" GroupName="Styles" ToolTip="精准歌词搭配高清写真" Checked="web_Checked"/>
			</StackPanel>
		</Grid>
		<StackPanel Grid.Row="1" Grid.Column="0">
			<StackPanel.Background>
                <ImageBrush ImageSource="skin\01716[48x441x8BPP].png" />
            </StackPanel.Background>
			<local:ImageRadioButtonButton Content="ImageRadioButtonButton" Height="62" Width="43" Style="{DynamicResource ImageRadioButtonStyle}" NorImage="skin/01226[46x62x8BPP].png" HorImage="skin/01227[46x62x8BPP].png" SelectedImage="skin/01228[46x62x8BPP].png"/>
			<local:ImageRadioButtonButton Content="ImageRadioButtonButton" Height="62" Width="43" Style="{DynamicResource ImageRadioButtonStyle}" NorImage="skin/01209[46x62x8BPP].png" HorImage="skin/01210[46x62x8BPP].png" SelectedImage="skin/01211[46x62x8BPP].png"/>
			<local:ImageRadioButtonButton Content="ImageRadioButtonButton" Height="62" Width="43" Style="{DynamicResource ImageRadioButtonStyle}" NorImage="skin/01229[46x62x8BPP].png" HorImage="skin/01230[46x62x8BPP].png" SelectedImage="skin/01231[46x62x8BPP].png"/>
			<local:ImageRadioButtonButton Content="ImageRadioButtonButton" Height="62" Width="43" Style="{DynamicResource ImageRadioButtonStyle}" NorImage="skin/01215[46x62x8BPP].png" HorImage="skin/01216[46x62x8BPP].png" SelectedImage="skin/01217[46x62x8BPP].png"/>
			<local:ImageRadioButtonButton Content="ImageRadioButtonButton" Height="62" Width="43" Style="{DynamicResource ImageRadioButtonStyle}" NorImage="skin/01212[46x62x8BPP].png" HorImage="skin/01213[46x62x8BPP].png" SelectedImage="skin/01214[46x62x8BPP].png"/>
			<local:ImageRadioButtonButton Content="ImageRadioButtonButton" Height="62" Width="43" Style="{DynamicResource ImageRadioButtonStyle}" NorImage="skin/01412[46x62x8BPP].png" HorImage="skin/01413[46x62x4BPP].png" SelectedImage="skin/01414[46x62x8BPP].png"/>
		</StackPanel>
		 <Grid Grid.Row="1" Grid.Column="1" >
		 	<Grid.ColumnDefinitions>
		 		<ColumnDefinition Width="71*"/>
		 		<ColumnDefinition Width="221*"/>
		 	</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="30" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
            <MediaElement Name="Sound" LoadedBehavior="Manual" MediaOpened="Sound_MediaOpened"/>
            <DockPanel Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Background="#50FFFFFF" Grid.ColumnSpan="2" >
				<TextBlock Text="播放列表"  Padding="10,0,0,0" VerticalAlignment="Center" Height="20"  FontWeight="Bold" Foreground="#FF464646" />
				<local:ImageButton HorizontalAlignment="Right"  VerticalAlignment="Center" Width="26" Height="22" Margin="0,0,20,0" NorImage="skin/01944[26x22x2BPP].png" HorImage="skin/01945[26x22x2BPP].png" DownImage="skin/01946[26x22x2BPP].png" Style="{DynamicResource ImageButtonStyle}" ToolTip="列表菜单" Click="AddSong"/>
			</DockPanel>
            <ListBox Grid.Row="1" Name="SongList"  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"  ItemContainerStyle="{DynamicResource ListBoxItemMusicStyle}"  Background="#50FFFFFF" BorderThickness="0" Grid.ColumnSpan="2"   PreviewMouseDoubleClick="SongList_DBClick" AllowDrop="True" Drop="SongList_Drop" />
            
        </Grid>
		<Grid Grid.Row="1" Grid.Column="2">
            <Canvas Margin="28,0,28,0" x:Name="CanvasLyric" ClipToBounds="True" Background="#00DA00FD" >
                <StackPanel x:Name="StackPanelCommonLyric"  Canvas.Left="0" Canvas.Top="300" Width="{Binding ActualWidth, ElementName=CanvasLyric, Mode=OneWay}" OpacityMask="Black" />
                <Canvas x:Name="CanvasFocusLyric"  Height="36"  Canvas.Left="0" Canvas.Top="253" Width="{Binding ActualWidth, ElementName=CanvasLyric, Mode=OneWay}" Background="{x:Null}" OpacityMask="Black" ClipToBounds="True">
                    <TextBlock x:Name="TBFocusLyricBack"  Height="{Binding Height, ElementName=CanvasFocusLyric}" Width="{Binding ActualWidth, ElementName=CanvasLyric, Mode=OneWay}" FontSize="22" TextAlignment="Center" Foreground="White" OpacityMask="Black" />
                    <Canvas x:Name="CanvasFocusLyricFore" Height="{Binding Height, ElementName=CanvasFocusLyric}" Width="30" ClipToBounds="True" OpacityMask="Black">
                        <TextBlock x:Name="TBFocusLyricFore" Text="{Binding Text, ElementName=TBFocusLyricBack}" Height="{Binding Height, ElementName=CanvasFocusLyric}" FontSize="{Binding FontSize, ElementName=TBFocusLyricBack}" TextAlignment="{Binding TextAlignment, ElementName=TBFocusLyricBack}" Foreground="Yellow" FontFamily="{Binding FontFamily, ElementName=TBFocusLyricBack}" Width="{Binding ActualWidth, ElementName=CanvasLyric, Mode=OneWay}" Visibility="{Binding Visibility, ElementName=TBFocusLyricBack}" TextWrapping="{Binding TextWrapping, ElementName=TBFocusLyricBack}" TextTrimming="{Binding TextTrimming, ElementName=TBFocusLyricBack}" OpacityMask="Black" />
                    </Canvas>
                </Canvas>
            </Canvas>
			<WebBrowser Name="Web" Visibility="Visible"/>
		</Grid>
        <Canvas Grid.Row="2" Grid.ColumnSpan="3">
            <Canvas  VerticalAlignment="Center" HorizontalAlignment="Right" Margin="790,5,0,0" Width="200" Height="20" >
                <TextBlock x:Name="textBlock2" Text="佛前的一条小鱼"  HorizontalAlignment="Right" VerticalAlignment="Center" Height="20"  Width="200" TextAlignment="Right" Canvas.Top="0"  Foreground="White">
               
                </TextBlock>
                <TextBlock  x:Name="textBlock3" Text="QQ: 452578374"  HorizontalAlignment="Right" VerticalAlignment="Center" Height="20"  Width="200" Canvas.Top="20" TextAlignment="Right" Foreground="White">
                
                </TextBlock>
			</Canvas>

        </Canvas>

    </Grid>
</Window>
