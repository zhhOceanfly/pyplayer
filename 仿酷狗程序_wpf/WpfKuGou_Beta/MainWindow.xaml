				<local:ImageButton x:Name="ChangeSkinBtn" Height="18" Width="23" Margin="5,0,0,0" Style="{DynamicResource ImageButtonStyle}" NorImage="skin/skin_normal.png" HorImage="skin/skin_hot.png" DownImage="skin/skin_down.png" ToolTip="更换皮肤" Click="ShowChangeSkinDlg"/>
                <Menu Height="23" Width="23" Margin="5,0,0,0" >
